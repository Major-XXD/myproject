# Start all services
php-cgi -b 127.0.0.1:9000 &
nginx -c ~/pihole/nginx_pihole.conf
dnsmasq -C ~/pihole/etc/dnsmasq.conf --pid-file=~/pihole/var/run/dnsmasq.pid

