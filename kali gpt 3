""")
    
    def start_session(self):
        print("ðŸš€ Ready for cybersecurity education!")
        print("Type 'help' for topics, 'exit' to quit\n")
        
        while True:
            try:
                query = input("ðŸ”¥ CYBER> ").strip()
                
                if not query:
                    continue
                elif query.lower() == 'exit':
                    print("\nðŸŽ“ Learning session completed!")
                    break
                elif query.lower() == 'clear':
                    self.clear_screen()
                    self.display_banner()
                    continue
                elif query.lower() == 'help':
                    self.display_help()
                    continue
                
                response = self.get_detailed_response(query)
                print(f"\n{response}\n")
                
            except KeyboardInterrupt:
                print("\nðŸ”¥ Session ended")
                break
            except Exception as e:
                print(f"Error: {e}")

if __name__ == "__main__":
    try:
        assistant = CyberSecurityAssistant()
        assistant.start_session()
    except Exception as e:
        print(f"Error: {e}")
